<h1>New Newspaper</h1>
<form action="<%= newspapers_url %>" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<label for="newspaper_title">Title</label>
	<input type="text" id="newspaper_title" name="newspaper[title]" value="<%= @newspaper.title %>">
	<br>
	<label for="newspaper_editor_id">Editor</label>
	<select id="newspaper_editor_id" name="newspaper[editor_id]">
		<option></option>
		<% @users.each do |user| %>
		<option value="<%= user.id %>"><%= user.name %></option>
		<% end %>
	</select>
	<br>
	<br>
	<strong>Subscription plan options:</strong>
	<%#= render :partial => "new_sub_plan" %>
	<br>
	<label for="newspaper_subscription_attributes_price">Price</label>
	<input type="text" 
			id="newspaper_subscription_attributes_price" 
			name="newspaper[subscription_plans_attributes][0][price]">
	<br>
	<label for="newspaper_subscription_attributes_type_daily">Daily</label>
	<input type="checkbox" 
			id="newspaper_subscription_attributes_type_daily" 
			name="newspaper[subscription_plans_attributes][0][subscription_type]" 
			value="1">
		
	<label for="newspaper_subscription_attributes_type_w">Weekly</label>
	<input type="checkbox" 
			id="newspaper_subscription_attributes_type_w" 
			name="newspaper[subscription_plans_attributes][0][subscription_type]" 
			value="0">
	<br>

	<p><input type="submit" value="Create Newspaper"></p>
</form>

